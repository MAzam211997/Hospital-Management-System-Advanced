@model IEnumerable<Hospital_Management_System.Models.Appointment>

@{
    ViewBag.Title = "ActiveAppointments";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Appointment</li>
        <li class="active">Active Appointments</li>
    </ol>
</div>

<h3>Active Appointments</h3>

<p>
    @Html.ActionLink("Create New", "AddAppointment", null, new { @class = "btn btn-primary" }) &nbsp;
    <a target="_blank" href="~/Reporting/DoctorsReports/AppointmentsReport.aspx?id=@ViewBag.DoctorId" class="btn btn-info">View Report</a>
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Doctor Name
            </th>
            <th>
                Patient Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Problem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="@Url.Action("EditAppointment", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px"></a> |
                    <a href="@Url.Action("DetailOfAppointment", new {id = item.Id})" class="fa fa-info-circle" style="font-size: 19px; color: lightblue"></a> |
                    <a href="@Url.Action("DeleteAppointment", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a> |
                    <a target="_blank" href="~/Reporting/DoctorsReports/PerAppointmentReport.aspx?id=@item.Id" class="fa fa-file" style="font-size: 19px; color: green"></a>
                    @*<a target="_blank" href="~/Reporting/PerPatientReport.aspx?id=@item.Id" class="btn btn-info">View Report</a>*@
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}

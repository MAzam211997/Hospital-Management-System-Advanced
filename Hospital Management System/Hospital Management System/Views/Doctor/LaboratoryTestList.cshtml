@model IEnumerable<Hospital_Management_System.Models.MedicalTest>

@{
    ViewBag.Title = "Laboratory Tests ";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Laboratory Test</li>
        <li class="active">List of Laboratory Test</li>
    </ol>
</div>

<h3>List of Laboratory Test</h3>

@*<p>
    <a target="_blank" href="~/Reporting/MedicalTestReport.aspx" class="btn btn-info">View Report</a>
</p>*@
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChargesPerTest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChargesPerTest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @*<a href="@Url.Action("EditLaboratoryTest", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px"></a> |
                    <a href="@Url.Action("DeleteLaboratoryTest", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a> |*@
                    <a target="_blank" href="~/Reporting/PerMedicalTestReport.aspx?id=@item.Id" class="fa fa-file" style="font-size: 19px; color: green"></a>
                    @*<a target="_blank" href="~/Reporting/PerPatientReport.aspx?id=@item.Id" class="btn btn-info">View Report</a>*@
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}
@model IEnumerable<Hospital_Management_System.Models.OperationTheatre>

@{
    ViewBag.Title = "ListOfOperationTheatre";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active"> Operation Theatre</li>
        <li class="active">List Of Operation Theatre</li>
    </ol>
</div>

<h2>List Of Operation Theatre</h2>

<p>
    @Html.ActionLink("Create New", "AddOperationTheatre", null, new { @class = "btn btn-primary" })
    @*&nbsp;
    <a target="_blank" href="~/Reporting/AppointmentsReport.aspx" class="btn btn-info">View Report</a>*@
</p>
<table id="table_id" class="table table-sm">
    <thead>
        <tr>
            <th>
                Doctor Name
            </th>
            <th>
                Patient Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Problem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="@Url.Action("EditOperationTheatre", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px"></a> |
                    <a href="@Url.Action("DetailOfOperationTheatre", new {id = item.Id})" class="fa fa-info-circle" style="font-size: 19px; color: lightblue"></a> |
                    @*<a href="@Url.Action("DeleteOperationTheatre", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a>*@
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}